# config.env

# Information sur l'application
APP_NAME="Gepetto"
APP_ENV="production"

# Configuration des utilisateurs et groupes
NGINX_USER="www-data"
NGINX_GROUP="www-data"
DEPLOY_USER="$SUDO_USER"
DEPLOY_GROUP="$SUDO_USER"

# Configuration GitHub
GITHUB_REPO="https://github.com/your-username/your-repo.git"
GITHUB_BRANCH="main"

# Configuration des chemins
DEPLOY_DIR="/var/www/Gepetto"
BACKUP_DIR="/var/backups/Gepetto"
LOG_DIR="/var/log/Gepetto"

# Configuration des permissions
APP_DIR_MODE="755"  # rwxr-xr-x
APP_FILE_MODE="644" # rw-r--r--
LOG_DIR_MODE="755"  # rwxr-xr-x
LOG_FILE_MODE="664" # rw-rw-r--

# Configuration Node.js
NODE_VERSION="20.11.1"
NPM_INSTALL_FLAGS="--production"

# Configuration Nginx
NGINX_PORT=80
NGINX_SERVER_NAME="your-domain.com"
NGINX_SSL_ENABLED=false
SSL_CERT_PATH="/etc/ssl/certs/your-cert.pem"
SSL_KEY_PATH="/etc/ssl/private/your-key.pem"

# Configuration Backend API
API_PORT=3001
API_URL="http://localhost:${API_PORT}"

# Configuration des sauvegardes
KEEP_BACKUPS=5